<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivFlag_imageOfFlag"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/uzb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFlag_nameOfCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        android:text="Uzbekiston"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivFlag_imageOfFlag" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2.3dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginTop="3dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@id/ivFlag_imageOfFlag"
        app:layout_constraintStart_toStartOf="@id/ivFlag_imageOfFlag"
        app:layout_constraintTop_toBottomOf="@id/tvFlag_nameOfCountry" />

</androidx.constraintlayout.widget.ConstraintLayout>